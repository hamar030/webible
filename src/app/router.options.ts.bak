import type { RouterConfig } from '@nuxt/schema'

export default <RouterConfig>{
  // https://router.vuejs.org/api/interfaces/routeroptions.html#routes

  // eslint-disable-next-line @typescript-eslint/no-unused-vars
  routes: (_routes: unknown) => [
    {
      name: 'home',
      path: '/',
      component: () => import('@/pages/index.vue').then((r) => r.default || r)
    },
    {
      name: 'bible',
      path: '/bible/:bookName?/:scriptName?/:chapterId(\\d+)?',
      layout: 'reading',
      component: () => import('@/pages/bible.vue').then((r) => r.default || r)
    },
    {
      name: 'bible-code',
      path: '/biblecode',
      component: () => import('@/pages/biblecode.vue').then((r) => r.default || r)
    },
    {
      name: 'ablut',
      path: '/about',
      component: () => import('@/pages/about.vue').then((r) => r.default || r)
    }
  ]
}
